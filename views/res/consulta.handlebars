<div class="card">
    <div class="card-body mt-8">
        <h2>Pesquisa:</h2>
         <form action="/admin/reservas/pesquisa" method="post">    
            <label form="casa" class="mt-3">Hospedagem:</label>                
            <select name="casa" class="custom-select">         
                {{#each casas}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma hospedagem registrada</option>
                {{/each}}
                <option value="0">todas</option>
            </select>
            <label form="cliente" class="mt-3">Cliente:</label>
            <select name="cliente" class="custom-select">
                {{#each clientes}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma cliente registrado</option>
                {{/each}}
                <option value="0">todas</option>
            </select>
            <label for="mes" class="mt-3">Mes:</label>
            <input type="number" id="mes" name="mes" placeholder="mm" class="form-control">
            <label for="ano" class="mt-3">Ano:</label>
            <input type="number" id="ano" name="ano" placeholder="aaaa" class="form-control">
            <button type="submit" class="btn btn-success mt-2">Search</button>
            <svg class="bi bi-search" width="1.5em" height="1.5em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M10.442 10.442a1 1 0 011.415 0l3.85 3.85a1 1 0 01-1.414 1.415l-3.85-3.85a1 1 0 010-1.415z" clip-rule="evenodd"/>
                <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 100-11 5.5 5.5 0 000 11zM13 6.5a6.5 6.5 0 11-13 0 6.5 6.5 0 0113 0z" clip-rule="evenodd"/>
            </svg>
        </form>
    </div>
</div>

<hr class="mt-4">
<h2>Lista de Reservas</h2>
<table class="table table-sm text-center">
  <thead>
    <tr>
      <th scope="col">Cliente</th>
      <th scope="col">Hospedagem</th>
      <th scope="col">Entrada</th>
      <th scope="col">Saída</th>
      <th scope="col">Qtde dias</th>
      <th scope="col">Diaria</th>
      <th scope="col">Total</th>
      <th scope="col">Ação</th>
    </tr>
  </thead>
  <tbody>
        {{#each reserva}}
        <tr>
        <td>{{cliente.nome}}</td>
        <td>{{casa.nome}}</td>
        <td>{{entrada}}</td>
        <td>{{saida}}</td>
        <td>{{dias}}</td>
        <td>{{valor_diaria}},00</td>
        <td>{{saldo}},00</td>
        <td>
            <a href="/admin/reservas/edit/{{_id}}"><button class="btn btn-primary btn-sm mt-2">editar</button></a>
            <form action="/admin/reservas/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-secondary btn-sm mt-2">deletar</button>
            </form>
        </td>
        </tr>
        {{else}}
            <p>Nenhuma reserva registrada.</p>
        {{/each}}
  </tbody>
</table>