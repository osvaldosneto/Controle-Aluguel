<div class="card">
    <div class="card-body">
        <h2>Cadastro de Custos:</h2>
         <form action="/custos/confirma" method="post">
            <label form="tipo" class="mt-3">Tipo:</label>
            <input type="text", id="tipo" name="tipo" class="form-control" required>
            <label for="data" class="mt-3">Data:</label>
            <input type="text", id="data" name="data" placeholder="dd/mm/aaaa" class="form-control" required>
            <label for="valor" class="mt-3">Valor:</label>
            <input type="text" name="valor" id="valor" class="form-control" onkeyup="maskIt(this,event,'###.###.###,##',true,{pre:'R$'})" value="00,00"/>
            <label form="descricao" class="mt-3">Descrição:</label><br>
            <textarea name="descricao" id="descricao"class="mt-3" rows="5" cols="50"></textarea><br>
            <button type="submit" class="btn btn-success mt-2">Confirmar</button>
        </form>
    </div>
</div>