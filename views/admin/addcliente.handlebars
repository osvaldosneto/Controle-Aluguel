<div class="card">
    <div class="card-body">
        <h2>Cadastro de novo hospede:</h2>
        <form action="/admin/clientes/novo" method="POST">
            <label form="nome" class="mt-3">Cliente:</label>
            <input type="text" id="nome" name="nome" placeholder="Nome do Cliente" class="form-control" required>
            <label for="telefone" class="mt-3">telefone:</label>
            <input type="tel" id="telefone" name="telefone" placeholder="55-55555-5555" class="form-control" pattern="[0-9]{2}-[0-9]{5}-[0-9]{4}" required>            
            <label for="email" class="mt-3">Email:</label>
            <input type="email" name="email" class="form-control">
            <label form="cidade" class="mt-3">Cidade:</label>
            <input type="text" id="cidade" name="cidade" placeholder="Cidade" class="form-control">
            <label form="nascimento" class="mt-3">Datanascimento:</label>
            <input type="date" id="nascimento" name="nascimento" placeholder="00/00/00" class="form-control">
            
            <button type="submit" class="btn btn-success mt-2">Confirmar</button>
        </form>
    </div>
</div>




