<h2>Edição de Hospedagem:</h2>
<div class="card">
    <div class="card-body">
        <form action="/admin/casas/edit" method="POST">
            <input type="hidden" name="id" value="{{casa._id}}">
            <label form="nome">Hospedagem:</label>
            <input class="form-control" type="text" id="nome" name="nome" placeholder="{{casa.nome}}" value="{{casa.nome}}">
            <label for="hospedes">Max hospedes:</label>
            <input type="number" id="maxhospedes" name="maxhospedes" placeholder="0" class="form-control" min="1" value="{{casa.maxhospede}}"> 
            <label for="diaria">Valor Diária:</label>
            <input type="Number" name="diaria" size="10" maxlength="10" placeholder="R$ 0,00" onkeydown="FormataMoeda(this,10,event)" onkeypress="return maskKeyPress(event)" class="form-control" value="{{casa.diaria}}"/>
            <label for="hospedeextra">Hospede extra:</label>
            <input type="Number" name="hospedeextra" size="10" maxlength="10" placeholder="R$ 00" onkeydown="FormataMoeda(this,10,event)" onkeypress="return maskKeyPress(event)" class="form-control" value="{{casa.hospedeextra}}"/>
            <button type="submit" class="btn btn-success mt-4">Confirmar</button>
        </form>
    </div>
</div>